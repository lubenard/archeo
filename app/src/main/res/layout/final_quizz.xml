<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textView15"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/recap" />

		<TextView
			android:id="@+id/final_quizz_question"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="35dp"
			android:textSize="20sp"
			android:gravity="center"
			android:text="@string/final_quizz_question" />

		<TextView
			android:id="@+id/final_quizz_consigne"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:textSize="20sp"
			android:gravity="center"
			android:text="@string/final_quizz_consigne" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageButton
				android:id="@+id/imageButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				app:srcCompat="@drawable/perso1" />

			<ImageButton
				android:id="@+id/imageButton2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				app:srcCompat="@drawable/perso2" />

			<ImageButton
				android:id="@+id/imageButton3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				app:srcCompat="@drawable/perso3" />

			<ImageButton
				android:id="@+id/imageButton4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				app:srcCompat="@drawable/perso4" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>